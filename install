   chdir(dirname(__FILE__));

   foreach (array('app', 'config') as $dir) {
      if (is_dir($dir)) {
         print "Error: Directory '$dir' already exists\n";
         exit(1);
      } else {
         printf("%12s  %s\n", 'create', $dir);
         if (is_dir('lib/skeleton/.svn')) {
            system("svn export -q lib/skeleton/$dir $dir");
         } else {
            system("cp -R lib/skeleton/$dir $dir");
         }
      }
   }

   # Force creation of new files
   $argv[] = '-f';

   ob_start();
   require 'lib/script/update.php';

?>
